# Production Environment Configuration
# For deployment with external PostgreSQL database (Supabase, Render, etc.)

# Database Configuration - External PostgreSQL
# Replace with your actual database URL
DATABASE_URL=postgresql://postgres:password@host:5432/expense_analyzer
DATABASE_TYPE=postgresql
DATABASE_PATH=data/transactions.db

# OpenAI Configuration (required for AI categorization in production)
OPENAI_API_KEY=sk-your-production-openai-api-key-here

# Categorization Settings
FUZZY_MATCH_THRESHOLD=86
KEYWORD_CONFIDENCE=0.95
FUZZY_CONFIDENCE_THRESHOLD=0.8
LLM_CONFIDENCE=0.75
MIN_WORD_LENGTH=3

# File I/O Settings - JSON arrays
ENCODINGS_LIST=["utf-8", "cp1255", "iso-8859-8", "windows-1255"]
DELIMITERS_LIST=[",", ";", "\t"]

# Default mapping file path
DEFAULT_MAPPING_PATH=data/mapping.csv

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# Security Settings
SESSION_TIMEOUT_MINUTES=30
SECRET_KEY=your-production-secret-key-here

# File Upload Limits
MAX_FILE_SIZE_MB=10

# Production Settings
DEBUG=false
ENVIRONMENT=production
