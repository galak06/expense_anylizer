# Local Development Environment Configuration
# For running with local PostgreSQL database

# Database Configuration - Local PostgreSQL
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/expense_analyzer
DATABASE_TYPE=postgresql
DATABASE_PATH=data/transactions.db

# OpenAI Configuration (optional - for AI categorization)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Categorization Settings
FUZZY_MATCH_THRESHOLD=86
KEYWORD_CONFIDENCE=0.95
FUZZY_CONFIDENCE_THRESHOLD=0.8
LLM_CONFIDENCE=0.75
MIN_WORD_LENGTH=3

# File I/O Settings - JSON arrays
ENCODINGS_LIST=["utf-8", "cp1255", "iso-8859-8", "windows-1255"]
DELIMITERS_LIST=[",", ";", "\t"]

# Default mapping file path
DEFAULT_MAPPING_PATH=data/mapping.csv

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=logs/expense_analyzer.log

# Security Settings
SESSION_TIMEOUT_MINUTES=60

# File Upload Limits
MAX_FILE_SIZE_MB=10

# Development Settings
DEBUG=true
ENVIRONMENT=local
