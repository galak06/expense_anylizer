# Expense Analyzer Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
DATABASE_PATH=data/transactions.db

# OpenAI Configuration (optional - for AI categorization)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Categorization Settings
FUZZY_MATCH_THRESHOLD=86
KEYWORD_CONFIDENCE=0.95
FUZZY_CONFIDENCE_THRESHOLD=0.8
LLM_CONFIDENCE=0.75
MIN_WORD_LENGTH=3

# File I/O Settings
# Comma-separated list of encodings to try
ENCODINGS_LIST=utf-8,cp1255,iso-8859-8,windows-1255
# Comma-separated list of delimiters to try
DELIMITERS_LIST=,,;,\t

# Default mapping file path
DEFAULT_MAPPING_PATH=data/mapping.csv

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/expense_analyzer.log

# Security Settings
# Session timeout in minutes (optional)
SESSION_TIMEOUT_MINUTES=60

# File Upload Limits
MAX_FILE_SIZE_MB=10
