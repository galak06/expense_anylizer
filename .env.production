# Production Environment Configuration
# For deployment with external PostgreSQL database

# Database Configuration - Production PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database_name
DATABASE_TYPE=postgresql
DATABASE_HOST=your-production-host
DATABASE_PORT=5432
DATABASE_NAME=expense_analyzer_prod
DATABASE_USER=your_production_user
DATABASE_PASSWORD=your_secure_password

# OpenAI Configuration (required for AI categorization)
OPENAI_API_KEY=sk-your-production-openai-api-key

# Categorization Settings
FUZZY_MATCH_THRESHOLD=86
KEYWORD_CONFIDENCE=0.95
FUZZY_CONFIDENCE_THRESHOLD=0.8
LLM_CONFIDENCE=0.75
MIN_WORD_LENGTH=3
MIN_LEARNING_CONFIDENCE=0.9
ENABLE_MULTI_STRATEGY_BOOST=true

# File I/O Settings - JSON arrays
ENCODINGS_LIST=["utf-8", "cp1255", "iso-8859-8", "windows-1255"]
DELIMITERS_LIST=[",", ";", "\t"]

# Default mapping file path
DEFAULT_MAPPING_PATH=data/mapping.csv

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/expense_analyzer.log

# Security Settings
SECRET_KEY=your-production-secret-key-here
SESSION_TIMEOUT_MINUTES=60

# File Upload Limits
MAX_FILE_SIZE_MB=10

# Production Settings
DEBUG=false
ENVIRONMENT=production

# PostgreSQL Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
